<h1>Пользователи</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Действие</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to "Удалить", admin_user_path(user), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Создать", new_admin_user_path, class: "btn" %>